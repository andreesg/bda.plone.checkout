<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="bda.plone.checkout">

<head>
  <metal:top fill-slot="top_slot">
    <tal:border define="dummy python:request.set('disable_border', True)" />
  </metal:top>
</head>

<body>

<metal:main fill-slot="main">
  <tal:main-macro metal:define-macro="main">

    <h1 class="documentFirstHeading" i18n:translate="your_order" i18n:domain="bda.plone.cart">Uw Bestelling</h1>
    
    <div class="tickets-breadcrumbs original" i18n:domain="bda.plone.cart">
      <a href="@@cart"
       class="btn btn-default step step-1" type="submit" i18n:translate="step_tickets">1. Tickets</a>

      <a 
       class="btn btn-default selected step step-2" type="submit" i18n:translate="step_details">2. Gegevens</a>

      <a 
       class="btn btn-default disabled step step-3" type="submit" i18n:translate="step_details_control">3. Gegevens Controleren</a>

      <a 
       class="btn btn-default disabled step step-4" type="submit" i18n:translate="step_details_payment">4. Betalen</a>
    </div>

    <tal:checkout replace="structure context/@@checkoutform" />

  </tal:main-macro>
</metal:main>

</body>
</html>