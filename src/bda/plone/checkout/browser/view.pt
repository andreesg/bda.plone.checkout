<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="bda.plone.checkout">

<head>
  <metal:top fill-slot="top_slot">
    <tal:border define="dummy python:request.set('disable_border', True)" />
  </metal:top>
</head>

<body>

<metal:main fill-slot="main">
  <tal:main-macro metal:define-macro="main"
    tal:define="tickets python: '/tickets' in context.absolute_url()">
    
    <h1 class="documentFirstHeading" i18n:translate="checkout">Your Order</h1>

    <div class="tickets-breadcrumbs original" tal:condition="tickets">
      <a href="@@cart"
       class="btn step step-1" type="button">1. Tickets</a>

      <a href=""
       class="btn step step-2 selected" type="button">2. Persoonsgegevens</a>

      <a href=""
       class="btn disabled step step-3" type="button">3. Gegevens controleren</a>

      <a href=""
       class="btn disabled step step-4" type="button">4. Betalen</a>
    </div>

    <tal:checkout replace="structure context/@@checkoutform" tal:condition="not:tickets"/>
    <div class="tickets-checkout">
      <tal:tickets_checkout replace="structure context/@@ticketscheckoutform" tal:condition="tickets"/>
    </div>
  </tal:main-macro>
</metal:main>

</body>
</html>