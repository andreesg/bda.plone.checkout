 
<div id="cart"
     i18n:domain="bda.plone.cart" class="checkout final-checkout"
     tal:define="tickets python: view.is_ticket()"
     tal:attributes="class python: 'checkout final-checkout cart_tickets' if tickets else 'checkout final-checkout'">


     <style type="text/css">
      div.tickets-breadcrumbs.original {
        display: none !important;
      }

      .template-checkout #form-checkout {
        padding-top: 30px !important;
      }

      .template-checkout #cart {
        padding-top: 0px !important;
      }

     </style>
     
  <div class="tickets-breadcrumbs final-checkout" tal:condition="tickets">
      <a href="@@cart"
       class="btn step step-1" type="button" i18n:translate="">1. Tickets</a>

      <a href="javascript:history.back()"
       class="btn step step-2" type="button" i18n:translate="">2. Person details</a>

      <a href=""
       class="btn step step-3 selected" type="button" i18n:translate="">3. Verify details</a>

      <a href=""
       class="btn disabled step step-4" type="button" i18n:translate="">4. Payment</a>
  </div>

  <div class="tickets-breadcrumbs final-checkout" tal:condition="not:tickets">
      <a href="./@@cart"
       class="btn step step-1" type="button">1. Winkelwagen</a>

      <a href="javascript:history.back()"
       class="btn step step-2" type="button">2. Gegevens</a>

      <a href=""
       class="btn step step-3 selected" type="button">3. Gegevens controleren</a>

      <a href=""
       class="btn disabled step step-4" type="button">4. Betalen</a>
  </div>

  <span style="display:none;"
        class="cart_execution_context">checkout</span>

  <span id="cart_item_template" style="display:none"
  tal:define="currency view/currency">
    <table>
      <thead>
        <tr class="cart-header">
          <th i18n:translate="" tal:content="python: 'Ticket type' if tickets else 'Omschrijving'">Ticket type</th>
          <th i18n:translate="">Price</th>
          <th i18n:translate="" class="quantity-th">Amount</th>
          <th i18n:translate="" class="subtotal-th">Subtotal</th>
        </tr>
      </thead>
    <tbody>
    
    <tr class="cart_item summary_item cart_item_content">
      <td><h4><span class="cart_item_title">Entree volwassene</span></h4></td>
      <td>
        <span class="price original">
          <span tal:content="currency">EUR</span><span class="cart_item_original_price">â‚¬ 17.50</span>
        </span>
      </td>
      <td class="quantity-col">
        <span class="cart_item_uid" style="display: none;">uid</span>
        <span class="cart_item_count">0</span>
      </td>
      <td class="subtotal-col">
        <span class="cart_item_uid" style="display: none;">uid</span>
        <span class="price cart_tickets">
          <span tal:content="currency">EUR</span><span class="cart_item_price">Price</span>
        </span>
      </td>
    </tr>
    </tbody>
  </table>
</span>
  
  <div class="table-responsive">
    <table>
      <thead>
        <tr class="cart-header">
          <th i18n:translate="" tal:content="python: 'Ticket type' if tickets else 'Omschrijving'">Ticket type</th>
          <th i18n:translate="">Price</th>
          <th i18n:translate="" class="quantity-th">Amount</th>
          <th i18n:translate="" class="subtotal-th">Subtotal</th>
        </tr>
      </thead>
      <tbody id="cart_items" style="display:none">
      </tbody>
    </table>
  </div>

  <div id="cart_summary" style="display: none;" class="summary_wrapper">
    <table class="cart_sum_content"
           tal:define="currency view/currency">
      <tal:details condition="not:view/summary_total_only">
        <tr>
          <td i18n:translate="summary_net">Net:</td>
          <td class="cart_net">0.00</td>
          <td class="currency" tal:content="currency" tal:condition="currency">EUR</td>
        </tr>
        <tr>
          <td i18n:translate="summary_vat">VAT.:</td>
          <td class="cart_vat">0.00</td>
          <td class="currency" tal:content="currency" tal:condition="currency">EUR</td>
        </tr>
        <tr class="discount" style="display: none;">
          <td i18n:translate="discount_net">Discount Net:</td>
          <td class="discount_net">0.00</td>
          <td class="currency" tal:content="currency" tal:condition="currency">EUR</td>
        </tr>
        <tr class="discount" style="display: none;">
          <td i18n:translate="discount_vat">Discount VAT.:</td>
          <td class="discount_vat">0.00</td>
          <td class="currency" tal:content="currency" tal:condition="currency">EUR</td>
        </tr>
      </tal:details>
      <tr class="discount" style="display: none;">
        <td><strong i18n:translate="discount_total">Discount Total:</strong></td>
        <td><strong class="discount_total">Total</strong></td>
        <td tal:condition="currency" class="currency">
          <strong tal:content="currency" class="currency">EUR</strong>
        </td>
      </tr>
      <tr class="shipping">
        <td>
          <span i18n:translate="summary_shipping">Shipping</span>:
          <span class="shipping_label"></span>
          <span class="shipping_description"></span>:
        </td>
        <td class="cart_shipping">0.00</td>
        <td tal:content="currency" tal:condition="currency">EUR</td>
      </tr>
      <tr>
        <td><strong i18n:translate="summary_total">Total:</strong></td>
        <td><strong class="cart_total">Total</strong></td>
        <td class="currency" tal:condition="currency">
          <strong tal:content="currency">EUR</strong>
        </td>
      </tr>
    </table>
    <div class="visualClear"></div>


  </div>

</div>